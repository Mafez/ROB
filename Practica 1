PROGRAM MOVIN
	LABEL 3
		SET OUT[4] = 1
		DELAY 50
		SET OUT[4] = 0
		DELAY 50
		GOTO 3

PROGRAM PROG1
	GLOBAL SEMG
	DEFINE SEM1
	LABEL 1
		 PRINTLN "ESPERANDO OBJETO EN EL SENSOR 1"
		 WAIT IN[1] = 1
		 PEND SEM1 FROM SEMG
		 
		 IF IN[1] = 0
		 	SET OUT[1] = 1
		 	PRINTLN "ERROR: NO ESTA EL OBJETO EN EL SENSOR 1"
		 	DELAY 200
		 	SET OUT[1] = 0
		 	GOTO 1
		 ENDIF

		 PRINTLN "COGIENDO PIEZA DE LA POSICION 2"
		 MOVED 0
		 SPEED 30
		 MOVED 1
		 OPEN
		 SPEED 10
		 MOVED 2
		 CLOSE

		 PRITNLN "SOLTANDO PIEZA EN LA POSICION 4"
		 MOVED 1
		 SPEED 30
		 MOVED 3
		 SPEED 10
		 MOVED 4
		 OPEN

		 PRINTLN "VOLVIENDO A LA POSICION INICIAL"
		 MOVED 3
		 SPEED 50
		 MOVED 0
		 CLOSE
		 POST 1 TO SEMG
	GOTO 1
END

PROGRAM PROG2
	DEFINE SEM2
	LABEL 2
		 PRINTLN "ESPERANDO OBJETO EN EL SENSOR 2"
		 WAIT IN[2] = 1
		 PEND SEM2 FROM SEMG
		 
		 IF IN[2] = 0
		 	SET OUT[1] = 1
		 	PRINTLN "ERROR: NO ESTA EL OBJETO EN EL SENSOR 2"
		 	DELAY 200
		 	SET OUT[1] = 0
		 	GOTO 2
		 ENDIF
		 RUN MOVIN
		 PRINTLN "COGIENDO PIEZA EN LA POSICION 4"
		 MOVED 0
		 SPEED 30
		 MOVED 3
		 OPEN
		 SPEED 10
		 MOVED 4
		 CLOSE

		 PRINTLN "SOLTANDO PIEZA EN LA POSICION 2"
		 MOVED 3
		 SPEED 30
		 MOVED 1
		 SPEED 10
		 MOVED 2
		 OPEN

		 PRINTLN "VOLVIENDO A LA POSICION INICIAL"
		 MOVED 1
		 SPEED 50
		 MOVED 0
		 CLOSE
		 POST 1 TO SEMG
	GOTO 2
END  